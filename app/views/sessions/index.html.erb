<% if !session[:user] %>
  <%= link_to 'Click here to login!', '/login' %>
<% else %>
  <%= 'Hi ' %> <%= session[:user] %>
  <form action='/logout' method = 'post'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit" value='Click here to logout!'>
  </form>
<% end %>
